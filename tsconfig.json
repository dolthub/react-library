{
  "include": [
    "./packages/*/src",
  ],
  "exclude": [
    "node_modules",
    "./packages/*/lib/**/*",
    "./packages/*/esm/**/*",
    "./packages/*/cjs/**/*",
  ],
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "esnext"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": "."
  }
}