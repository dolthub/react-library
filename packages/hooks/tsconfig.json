{
  "include": ["./src"],
  "exclude": ["./types", "./esm", "./cjs", "node_modules", "./dist", "./src/__tests__"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist",
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
    "noImplicitAny": true,
    "types": ["node", "jsdom", "@testing-library/jest-dom"]
  }
}